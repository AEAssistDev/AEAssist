<Window x:Class="AEAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AEAssist"
        mc:Ignorable="d"
        Title="AEAssist" Height="350" Width="525">
    <Grid>
        <!-- <Grid.RowDefinitions> -->
        <!--     <RowDefinition Height="20"/> -->
        <!--     <RowDefinition Height="50"/> -->
        <!--     <RowDefinition Height="30"/> -->
        <!--     ~1~剩余高度@1@ -->
        <!--     <RowDefinition Height="*"/> -->
        <!-- </Grid.RowDefinitions> -->
        
        <TabControl>
            <TabItem Header="GeneralSetting">
                <StackPanel HorizontalAlignment="Left">
                    <Button Width="150" Margin="5,5,5,5" Content="显示Overlay"/>
                    <TextBox Width="150" Margin="5,5,5,5" Text="Q群: 814352226" IsReadOnly="True"/>
                    <Border Margin="5,6,4,6" BorderBrush="SteelBlue" BorderThickness="3,3,3,3" CornerRadius="3" VerticalAlignment="Top">
                        <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" Margin="5,5,5,5" Content="开启TTK"></CheckBox>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="X秒内死亡" ToolTip="预计多少秒内死亡"></Label>
                        <Label Grid.Row="2" Grid.Column="0" Content="伤害阈值" ToolTip="目标受到的超过给定值的伤害不作为TTK计算依据"></Label>
                        
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,5,5,5" Width="100"></TextBox>
                        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,5,5,5" Width="100"></TextBox>
                    </Grid>
                    </Border>
                    <Button Width="150" Margin="5,5,5,5" Content="保存设置"/>
                    <Button Width="150" Margin="5,5,5,5" Content="重置设置"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="BardSetting">
                
            </TabItem>
        </TabControl>
            
        
        <!-- <Grid> -->
        <!--     <StackPanel Margin="5,5,0,0"> -->
